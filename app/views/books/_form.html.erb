      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
    <%= form.label :author, style: "display: block" %>
    <%= form.text_field :author %>
    <%= form.label :price, style: "display: block" %>
    <%= form.number_field :price, step: :any %>
    <%= form.label :published_date, style: "display: block" %>
    <%= form.date_select :published_date, :order => [:month, :day, :year], start_year:1900, end_year: 2024, default: {month: 07, day: 02, year: 2000} %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
